<div class="main-container">
  <div class="ui middle aligned center aligned grid">
    <div class="three wide column">
      <h2 class="ui teal image header">
        <div class="content">
          Log In
        </div>
      </h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "ui large form" }) do |f| %>
        <div class="ui stacked segment">
          <div class="field">
            <div class="ui left icon input">
              <i class="user icon"></i>
              <%= f.text_field :email, required: true, autofocus: true, label: false, placeholder: "E-mail address" %>
            </div>
          </div>
          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              <%= f.password_field :password, required: true, placeholder: "Password", label: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            </div>
          </div>
          <%= f.submit "Log in", class: "ui fluid large teal submit button" %>
        </div>

        <div class="ui error message"></div>

      <% end %>

      <div class="ui message">
        New to us? 
        <%= link_to "Sign Up", new_user_registration_path %>
      </div>
    </div>
  </div>
</div>
